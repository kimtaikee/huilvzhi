<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/exchange_item_background"
    android:minHeight="50dp"
    android:animateLayoutChanges="true"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginBottom="@dimen/margin"
    android:orientation="horizontal" >

    <com.jointcity.huilvzhi.CountryItem
        android:id="@+id/countryitem_src_currency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/exchange_to" />

    <com.jointcity.huilvzhi.CountryItem
        android:id="@+id/countryitem_dst_currency"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

    <com.jointcity.huilvzhi.VerticalSeparator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_rate"
        android:layout_marginLeft="@dimen/padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="#ffaa00"
        android:layout_weight="2" />

    <ProgressBar
        android:id="@+id/pgsbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_weight="1" />

</LinearLayout>